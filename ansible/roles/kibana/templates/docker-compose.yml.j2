version: '3.8'
services:
  kibana:
    image: docker.elastic.co/kibana/kibana:8.11.0
    container_name: kibana
    environment:
      - ELASTICSEARCH_HOSTS=http://{{ hostvars['elasticsearch.ru-central1.internal']['ansible_default_ipv4']['address'] }}:9200
      - ELASTICSEARCH_USERNAME=elastic
      - ELASTICSEARCH_PASSWORD={{ elastic_password }}
    ports:
      - "5601:5601"
    restart: always
    depends_on:
      - elasticsearch
