filebeat.inputs:
- type: filestream
  enabled: true
  paths:
    - /var/log/nginx/access.log
  fields:
    type: nginx-access
  fields_under_root: true

- type: filestream
  enabled: true
  paths:
    - /var/log/nginx/error.log
  fields:
    type: nginx-error
  fields_under_root: true

output.elasticsearch:
  hosts: ["{{ elasticsearch_host }}:9200"]
  username: "elastic"
  password: "{{ elastic_password }}"
